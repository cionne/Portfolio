@{
    ViewData["Title"] = "Portfolio - Professional Showcase";
}

<!-- Minimal Hero Section -->
<section class="minimal-hero bg-white">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <div class="hero-logo mb-4">
                    <i class="fas fa-gem fa-3x text-primary"></i>
                </div>
                <h1 class="display-4 fw-bold mb-4">Your Professional Portfolio Awaits</h1>
                <p class="lead text-muted mb-5">Create a stunning digital portfolio that showcases your work and attracts opportunities.</p>

                <div class="cta-section">
                    <a href="@Url.Action("Register", "Home")" class="btn btn-primary btn-lg px-5 py-3 me-3 mb-3">
                        Create Portfolio
                    </a>
                    <a href="@Url.Action("Login", "Home")" class="btn btn-outline-dark btn-lg px-5 py-3 mb-3">
                        Sign In
                    </a>

                    <div class="w-100"></div>

                    <div class="divider my-4">
                        <span class="px-3 text-muted">or continue with</span>
                    </div>

                    <form asp-controller="Home" asp-action="GoogleLogin" method="get" class="d-inline">
                        <button type="submit" class="btn btn-outline-primary btn-lg">
                            <i class="fab fa-google me-2"></i>Google
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .minimal-hero {
        padding: 120px 0;
        min-height: 100vh;
        display: flex;
        align-items: center;
    }

    .hero-logo {
        opacity: 0.8;
    }

    .divider {
        position: relative;
        text-align: center;
    }

        .divider::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background: #dee2e6;
            z-index: 1;
        }

        .divider span {
            background: white;
            position: relative;
            z-index: 2;
            padding: 0 20px;
        }
</style>